<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sx.phoneguard.activities.Setup1Activity">

    <TextView
        style="@style/titleStyle"
        android:text="手机防盗界面"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/lostfindStyle"
            android:gravity="left"
            android:text="安全号码"
            />

        <TextView
            android:id="@+id/tv_lostfind_safenumber"
            style="@style/lostfindStyle"
            android:gravity="right"
            android:text="111"
            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/lostfindStyle"

            android:text="防盗保护是否开启"
            />

        <ImageView
            android:id="@+id/iv_lostfind_lock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lock"/>
    </LinearLayout>

    <TextView
        android:onClick="entersetup"
        style="@style/contentStyle"
        android:clickable="true"
        android:text="重新进入设置向导"
        />
    <TextView
        android:text="功能简介"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="8dp"
        android:background="#33000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center_vertical"
        style="@style/contentStyle"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/star_big_on"/>

        <TextView
            style="@style/contentStyle"
            android:text="SIM卡变更报警:#*sim*#"
            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        style="@style/contentStyle"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/star_big_on"/>

        <TextView
            style="@style/contentStyle"
            android:text="GPS追踪:#*GPS*#"
            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        style="@style/contentStyle"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/star_big_on"/>

        <TextView
            style="@style/contentStyle"
            android:text="远程锁屏:#*lockscreen*#"
            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        style="@style/contentStyle"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/star_big_on"/>

        <TextView
            style="@style/contentStyle"
            android:text="远程销毁数据:#*wipedata*#"
            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        style="@style/contentStyle"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/star_big_on"/>

        <TextView
            style="@style/contentStyle"
            android:text="音乐报警:#*music*#"
            />
    </LinearLayout>
</LinearLayout>
