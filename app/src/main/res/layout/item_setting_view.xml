<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="@drawable/list_selector"
                android:layout_height="75dp">

    <TextView
        android:text="自动更新设置"
        android:textSize="24sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/tv_setting_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="自动更新已经打开"
        android:layout_below="@id/tv_setting_item_title"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:textColor="#51b33b"
        android:id="@+id/tv_setting_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:clickable="false"
        android:id="@+id/cb_setting_checked"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <!--分割线-->
    <View android:layout_width="match_parent"
          android:layout_height="2dip"
          android:layout_alignParentBottom="true"
          android:layout_marginTop="5dp"
          android:background="@drawable/list_devider"/>
</RelativeLayout>