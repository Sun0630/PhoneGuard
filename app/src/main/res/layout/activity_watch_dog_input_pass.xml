<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sx.phoneguard.activities.WatchDogInputPassActivity">

    <TextView
        android:id="@+id/tv_watchdog_title"
        android:text="请输入看门狗口令"
        style="@style/titleStyle"/>

    <ImageView
        android:id="@+id/iv_watchdog_icon"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_below="@id/tv_watchdog_title"
        android:id="@+id/et_watchdog_pass"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="submit"
        android:text="提交"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="cancle"
        android:text="取消"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
